<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".RegisterActivity">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"/>
    <Button
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_margin="15dp"
        android:onClick="exitApp"
        android:background="@drawable/close_vect"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="135dp"
        android:textColor="@color/colorWhite"
        android:textSize="28sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="200dp"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/white_outline"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I am "
                        android:textSize="19sp"
                        android:textColor="@color/colorWhite"/>
                    <Spinner
                        android:id="@+id/user_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:backgroundTint="@color/colorWhite"
                        android:spinnerMode="dialog"
                        android:visibility="visible"/>
                </LinearLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/user_name_Wrapper"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:foregroundTint="@color/colorWhite"
                    android:backgroundTint="@color/colorWhite"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/user_name"
                        android:foregroundTint="@color/colorWhite"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Name"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/user_email_Wrapper"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorWhite"
                    android:layout_margin="10dp"
                    android:foregroundTint="@color/colorWhite"
                    android:backgroundTint="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/user_email"
                        android:backgroundTint="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:foregroundTint="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="Email"/>
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:id="@+id/works_block"
                    android:layout_margin="10dp"
                    android:visibility="invisible"
                    android:paddingLeft="15dp"
                    android:background="@drawable/white_outline"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Working At : "
                        android:textSize="19sp"
                        android:textColor="@color/colorWhite"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:id="@+id/user_work"
                        android:backgroundTint="@color/colorWhite"
                        android:spinnerMode="dialog"
                        android:visibility="visible">
                    </Spinner>
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:elevation="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/white_outline"
                    android:text="Register Now"
                    android:textSize="16sp"
                    android:onClick="registerNow"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/colorWhite"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>